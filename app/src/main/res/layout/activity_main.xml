<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yang.mac.calendarview.MainActivity">

    <com.yang.mac.calendarview.widget.CalendarTitle
        android:id="@+id/act_main_calendar_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/color_f7f7f7"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp">
    </com.yang.mac.calendarview.widget.CalendarTitle>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <Button
            android:id="@+id/act_main_day"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="day"/>

        <Button
            android:id="@+id/act_main_week"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="week"/>

        <Button
            android:id="@+id/act_main_month"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="year"/>

    </LinearLayout>
</LinearLayout>

